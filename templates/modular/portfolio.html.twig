<div id="portfolio">
	<div class="container-fluid p-0">
		<div class="row no-gutters">
			{% for item in page.header.portfolio %}
				<div class="col-lg-4 col-sm-6">
					<a class="portfolio-box" href="{{ page.url(true) }}/{{ item.img }}">
						{{ page.media[item.img].cropZoom(640,340).html(item.name, item.name, "img-fluid")|raw }}
						<div class="portfolio-box-caption">
							<div class="project-category text-white-50">{{ item.category }}</div>
							<div class="project-name">{{ item.name }}</div>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
</div>