<!-- Masthead-->
{% if page.media.images %}
	{% set bg_img = page.media.images|first.url() %}
{% endif %}

<header class="masthead" {% if bg_img %}style="background: linear-gradient(to bottom, rgba(92, 77, 66, 0.8) 0%, rgba(92, 77, 66, 0.8) 100%), url({{bg_img}}) center no-repeat; background-size: cover"{% endif %}>
	<div class="container h-100">
		<div class="row h-100 align-items-center justify-content-center text-center">
			<div class="col-lg-10 align-self-end">
				<h1 class="text-uppercase text-white font-weight-bold">{{ page.header.title }}</h1>
				<hr class="divider my-4" />
			</div>
			<div class="col-lg-8 align-self-baseline">
				<p class="text-white-75 font-weight-light mb-5">{{ page.header.description }}</p>
				{% for button in page.header.buttons %}
					<a class="btn btn-primary btn-xl js-scroll-trigger" href="{{ button.url }}">{{ button.text }}</a>
				{% endfor %}
			</div>
		</div>
	</div>
</header>