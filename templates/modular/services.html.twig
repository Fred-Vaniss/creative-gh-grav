<section class="page-section" id="services">
	<div class="container">
		<h2 class="text-center mt-0">{{ page.title }}</h2>
		<hr class="divider my-4" />
		<div class="row">
			{% for service in page.header.services %}

				<div class="col-lg-3 col-md-6 text-center">
					<div class="mt-5">
						<i class="fas fa-4x {{ service.icon }} text-primary mb-4"></i>
						<h3 class="h4 mb-2">{{ service.title }}</h3>
						<p class="text-muted mb-0">{{ service.subtitle }}</p>
					</div>
				</div>
				
			{% endfor %}
		</div>
	</div>
</section>