<section class="page-section bg-primary" id="about">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-8 text-center">
				<h2 class="text-white mt-0">{{ page.header.title }}</h2>
				<hr class="divider light my-4" />
				<p class="text-white-50 mb-4">{{ page.header.text }}</p>
				{% for button in page.header.buttons %}
					<a class="btn btn-light btn-xl js-scroll-trigger" href="{{ button.url }}">{{ button.text }}</a>
				{% endfor %}
			</div>
		</div>
	</div>
</section>